<% include ../partials/header %>                           <!-- Including header partial -->

    <div class="row">
        <div class="col-md-4">
            <h1><%= user.firstname %> <%= user.lastname %></h1>
            <div class="thumbnail">
                <img class=" " src="<%= user.avatar %>" alt="User Profile Image">
                <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
            </div>
        </div>
        <div class="col-md-8">
            <h3><%= user.username %>'s Campgrounds:</h3>
            <ul>
                <% campgrounds.forEach(function(campground){ %>
                <li><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></li>
                <% }); %>
            </ul>
        </div>
    </div>

<% include ../partials/footer %>                          <!-- Including footer partial -->