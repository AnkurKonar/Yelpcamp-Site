<% include ../partials/header %>                           <!-- Including header partial -->

    <div class="row">
        <h1 style="text-align:center;"> Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="comment[text]" type="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block" type="submit">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>                          <!-- Including footer partial -->